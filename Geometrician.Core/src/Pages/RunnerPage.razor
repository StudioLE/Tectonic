@page "/run/{AssemblyKey?}/{ActivityKey?}"
@using Lineweights.Core.Documents
@inherits RunnerPageBase

<PageTitle>
  Geometrician@(State.Assets.Count > 0
                ? $" ({State.Assets.Count})"
                : string.Empty)
</PageTitle>

<MudThemeProvider Theme="Display.Theme" @bind-IsDarkMode="Display.IsDarkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
  <MudMainContent>

    @* <div class="container is-fluid p-5"> *@

    <RunnerComponent AssemblyKey="@AssemblyKey" ActivityKey="@ActivityKey"/>

    @foreach (Asset asset in State.Assets.Reverse())
    {
      <AssetComponent @key="asset.Info.Id" Asset="asset"/>
    }

  @* </div> *@

  </MudMainContent>
</MudLayout>

@using System.Linq
@using Lineweights.Core.Documents
@inherits AssetComponentBase

<MosaicComponent>
  <TileComponent XScale="0.25" YScale="1" Title="@GetTitle()">
    <MudText Typo="Typo.subtitle1" Align="Align.Right" Style="display: block; color: var(--mud-palette-drawer-text);">
      <TimeComponent DateTime="@Asset.Info.LastRevisionTime"/>
    </MudText>
  </TileComponent>
  @foreach (Asset child in Asset.Children)
  {
    <ViewerComponent Asset="child"></ViewerComponent>
  }
</MosaicComponent>

@inherits AssemblySelectionComponentBase

<MudForm
  @bind-IsValid="IsValid"
  @bind-Errors="Errors"
  Style="width: inherit;">
  <MosaicComponent Padding="false" Margin="false">
    <TileComponent XScale="1.5" YScale="0.5">
      <MudSelect
        Label="Loaded Assemblies"
        HelperText="Loaded Assemblies"
        @bind-Value="AssemblySelectValue">
        @foreach (string item in AssemblySelectOptions)
        {
          <MudSelectItem Value="@item">@item</MudSelectItem>
        }
      </MudSelect>
    </TileComponent>

    <TileComponent XScale="1.5" YScale="0.5">
      <MudTextField
        Label="By Path"
        HelperText="By Path"
        @bind-Value="AssemblyInputValue"/>
    </TileComponent>

    <TileComponent XScale="0.25" YScale="0.5" Padding="false">
      <MudIconButton
        Variant="Variant.Filled"
        Color="Color.Primary"
        Disabled="@(!IsValid)"
        Icon="@Icons.Material.Filled.Send"
        OnClick="SetAssemblyByKey"
        style="width: 100%; height: 100%;"/>
    </TileComponent>

    <TileComponent XScale="0.25" YScale="0.5" Padding="false">
      <MudIconButton
        Variant="Variant.Filled"
        Color="Color.Primary"
        Disabled="@(!IsValid)"
        Icon="@Icons.Material.Filled.Send"
        OnClick="SetAssemblyByPath"
        style="width: 100%; height: 100%;"/>
    </TileComponent>
  </MosaicComponent>
</MudForm>

@page "/run/{AssemblyKey?}/{ActivityKey?}"
@using Geometrician.Components.Visualization
@inherits RunnerPageBase

<PageTitle>
  Geometrician@(State.Outcomes.Count > 0
                ? $" ({State.Outcomes.Count})"
                : string.Empty)
</PageTitle>

<MudThemeProvider Theme="Display.Theme" @bind-IsDarkMode="Display.IsDarkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
  <MudMainContent>

    <RunnerComponent AssemblyKey="@AssemblyKey" ActivityKey="@ActivityKey"/>

    @foreach (Outcome outcome in State.Outcomes.Reverse())
    {
      <OutcomeComponent @key="outcome.Id" Outcome="outcome"/>
    }

  </MudMainContent>
</MudLayout>

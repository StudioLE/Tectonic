@using Lineweights.Core.Assets
@inherits OutcomeComponentBase

<MosaicComponent>
  <TileComponent XScale="0.25" YScale="1" Title="@GetTitle()">
    <MudText Typo="Typo.subtitle1" Align="Align.Right" Style="display: block; color: var(--mud-palette-drawer-text);">
      <TimeComponent DateTime="@Outcome.CreationTime"/>
    </MudText>
  </TileComponent>
  @foreach (IAssetFactory<IAsset> factory in Outcome.Assets)
  {
    <DynamicViewerComponent Factory="@factory"/>
  }
</MosaicComponent>

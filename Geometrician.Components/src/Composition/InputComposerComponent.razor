@inherits InputComposerComponentBase

@if (InputPacks.Count == 0)
{
  <TileComponent XScale="0.75" YScale="1">
    This activity has no inputs.
  </TileComponent>
}
<MudForm
  @ref="Form"
  @bind-IsValid="IsValid"
  @bind-Errors="Errors"
  Style="width: fit-content;"
  Class="@($"d-flex gap-{Display.GapMultiplier}")">
  @foreach (InputPackProxy inputPack in InputPacks)
  {
    <TileComponent XScale="0.25" YScale="1" Title="@inputPack.Title" SubTitle="@inputPack.Title"/>

    <TileComponent XScale="0.75" YScale="1" style="overflow: scroll;">
      @foreach (InputProxy input in inputPack.Inputs)
      {
        <DynamicInputComponent Input="@input"/>
      }
    </TileComponent>
  }

  <TileComponent XScale="0.25" YScale="0.5" Padding="false">
    <MudIconButton
      Variant="Variant.Filled"
      Color="Color.Primary"
      Disabled="@(!IsValid)"
      Icon="@Icons.Material.Filled.Send"
      OnClick="SubmitAsync"
      style="width: 100%; height: 100%;"/>
  </TileComponent>
</MudForm>

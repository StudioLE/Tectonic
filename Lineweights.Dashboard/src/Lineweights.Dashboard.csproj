<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <Description>A [Blazor](https://dotnet.microsoft.com/en-us/apps/aspnet/web-apps/blazor) client application to visualise the results of Elements logic.</Description>
  </PropertyGroup>

  <!-- Use consistent properties across all src projects -->
  <Import Project="..\..\GlobalProperties.src.props" />

  <!-- Use consistent global usings across all src projects -->
  <Import Project="..\..\GlobalUsings.src.props" />

  <ItemGroup>
    <PackageReference Include="Humanizer.Core" Version="2.14.1" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="6.0.4" />
    <PackageReference Include="NUnit.Engine" Version="3.15.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Lineweights.Results.NUnit\src\Lineweights.Results.NUnit.csproj" />
    <ProjectReference Include="..\..\Lineweights.Results\src\Lineweights.Results.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\temp\**" Watch="false" />
    <Content Include=".gitignore">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <None Include="Styles\card.scss">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
    <None Include="Styles\blazor.scss">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
    <Content Remove="wwwroot\bundle.css" />
  </ItemGroup>

  <ItemGroup>
    <Watch Include="Scripts\*.js" />
    <Watch Include="Scripts\*.ts" />
  </ItemGroup>

  <Target Name="PostRestore" AfterTargets="_GenerateRestoreProjectSpec">
    <Exec Command="echo Executing npm install" />
    <Exec Command="npm install" />
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Condition="'$(Configuraton)' == 'Debug'" Command="echo Executing npm run build-dev" />
    <Exec Condition="'$(Configuraton)' == 'Debug'" Command="npm run build-dev" />
    <Exec Condition="'$(Configuraton)' != 'Debug'" Command="echo Executing npm run build-dev" />
    <Exec Condition="'$(Configuraton)' != 'Debug'" Command="npm run build-dev" />
  </Target>
</Project>

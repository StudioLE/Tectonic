<Project Sdk="Microsoft.NET.Sdk">

  <!-- Use consistent properties across all projects -->
  <Import Project="..\..\Global.props"/>

  <!-- Use consistent global usings across all tests projects -->
  <Import Project="..\..\GlobalUsings.tests.props"/>

  <ItemGroup>
    <ProjectReference Include="..\samples\Geometrician.Workflows.Samples.csproj"/>
    <ProjectReference Include="..\src\Geometrician.Workflows.csproj"/>
  </ItemGroup>

  <ItemGroup Condition="'$(SolutionName)' == 'Geometrician.Cascade'">
    <PackageReference Include="Geometrician.Diagnostics.Samples" Version="$(GeometricianNuGetVersion)" />
    <PackageReference Include="Geometrician.Diagnostics.NUnit" Version="$(GeometricianNuGetVersion)" />
    <PackageReference Include="Geometrician.Flex.Samples" Version="$(GeometricianNuGetVersion)" />
  </ItemGroup>

  <ItemGroup Condition="'$(SolutionName)' != 'Geometrician.Cascade'">
    <ProjectReference Include="..\..\Geometrician.Core\tests\Geometrician.Core.Tests.csproj"/>
    <ProjectReference Include="..\..\Geometrician.Diagnostics\samples\Geometrician.Diagnostics.Samples.csproj"/>
    <ProjectReference Include="..\..\Geometrician.Diagnostics.NUnit\src\Geometrician.Diagnostics.NUnit.csproj"/>
    <ProjectReference Include="..\..\Geometrician.Flex\samples\Geometrician.Flex.Samples.csproj"/>
  </ItemGroup>

</Project>

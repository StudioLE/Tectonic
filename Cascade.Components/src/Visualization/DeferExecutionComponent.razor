@using StudioLE.Core.Results
@inherits DeferExecutionComponentBase

@if (Factory.Result is Success)
{
  @ChildContent
}
else
{
  <MudButton
    Variant="Variant.Text"
    Color="Color.Primary"
    EndIcon="@Icons.Material.Filled.Send"
    OnClick="Execute"
    style="width: 100%; height: 100%;">
    Load @Factory.Asset.Name
  </MudButton>
}

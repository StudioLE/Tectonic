@inherits ActivityResolverComponentBase

<MudForm Style="width: inherit;">
  <MosaicComponent Padding="false" Margin="false">
    <TileComponent XScale="1.5" YScale="1">
      @if(ActivitySelectOptions.Any())
      {
        <MudSelect
          Label="Activity"
          HelperText="Activity"
          @bind-Value="ActivitySelectValue">
          @foreach (string activity in ActivitySelectOptions)
          {
            <MudSelectItem Value="@activity">@activity</MudSelectItem>
          }
        </MudSelect>
      }
      else
      {
        <span>No activities were found</span>
      }
    </TileComponent>

    <TileComponent XScale="0.25" YScale="0.5" Padding="false">
      <MudIconButton
        Variant="Variant.Filled"
        Color="Color.Primary"
        Icon="@Icons.Material.Filled.Send"
        OnClick="SetActivity"
        style="width: 100%; height: 100%;"/>
    </TileComponent>
  </MosaicComponent>
</MudForm>
